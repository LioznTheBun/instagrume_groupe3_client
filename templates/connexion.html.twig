{% extends 'base.html.twig' %}

{% block titre %}{{ parent() }} - Connexion{% endblock %}

{% block stylesheets %}
	{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/connexion.css') }}" type="text/css">
{% endblock%}

{% block javascripts %}
    {{ parent() }}  
{% endblock %}

{% block body %}
    <div class="container-form-connexion">
        <div class="container-md">   
            <div class="row">
                <form method='POST' action='/login' class="col-lg-3 col-12 mx-auto form-connexion p-5 pt-4 mb-4">
                    <img src='{{ asset("images/logo.svg") }}' class='w-50 mx-auto d-block'>
                    <p class="bg-danger">{{response|default("")}}</p>
                    <div class='form-group'>
                        <input type='text' class='form-control' id='email' name='email' placeholder='Email' required>
                    </div>
                    <div class='form-group mt-3'>
                        <input type='password' class='form-control' id='password' name='password' placeholder='Mot de passe' required>
                    </div>
                    <button type='submit' class='btn btn-success mt-4 w-100'>Valider</button>
                    <div class="pasInscrit mt-3">
                        <a href="/inscription">Toujours pas inscrit ? Allez-y !</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}