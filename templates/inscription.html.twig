{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Inscription
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/inscription.css') }}" type="text/css">
{% endblock%}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container-form-inscription">
		<div class="container-md">
			<div class="row">
				<form method='POST' action='/inscription' enctype="multipart/form-data" class="col-lg-3 col-12 mx-auto form-inscription p-5 pt-4 mb-4">
					<img src='{{ asset("images/logo.svg") }}' class='w-50 mx-auto d-block'>
					<p class="bg-danger">{{response|default("")}}</p>
					<div class='form-group'>
						<input type='email' class='form-control' id='email' name='email' placeholder='Adresse email' required>
					</div>
					<div class='form-group mt-3'>
						<input type='text' class='form-control' id='pseudo' name='pseudo' placeholder='Pseudo' required>
					</div>
					<div class='form-group mt-3'>
						<input type='file' class='form-control' id='avatar' name='avatar' accept="image/*">
					</div>
					<div class='form-group mt-3'>
						<input type='password' class='form-control' id='password' name='password' placeholder='Mot de passe' required>
					</div>
					<button type='submit' class='btn btn-success mt-4 w-100'>S'inscrire</button>
					<div class="dejaInscrit mt-3">
                        <a href="/login">Déjà inscrit ? Connectez-vous !</a>
                    </div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
